<h1>Edit <%= @character.name %></h1>

<%= form_for @character do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.submit %>

<% end %>

<%= form_for @character, method: :delete do |f| %>
  <%= f.submit "Delete", class: "delete" %>
<% end %>
